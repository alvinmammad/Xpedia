@model IEnumerable<Xpedia.Models.Team>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}



<p>
    @Html.ActionLink("Yarat", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
           Komanda üzvünün kateqoriyası
        </th>
        <th>
           Komanda üzvünün şəkli
        </th>
        <th>
           Komanda üzvünün ad soyadı
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TeamCategory.Name)
        </td>
        <td>
            <img src="~/Uploads/Team/@item.Photo" alt="@item.Fullname" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fullname)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-info" })

        </td>
        <td>
            @Html.ActionLink("Sil", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
